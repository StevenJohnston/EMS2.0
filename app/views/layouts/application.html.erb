<!DOCTYPE html>
<html>
<head>
<title>EMS</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id='cssmenu'>
    <ul>
      <div id="Tables">
        <% if current_user %>
        <li><a href=""> <%= current_user.name %></a></li>
        <li><%= link_to "Create Account", signup_path %></li>
        <li><%= link_to "Companies", companies_path %></li>
        <li><%= link_to "Full Time", full_time_employees_path %></li>
        <li><%= link_to "Part Time", part_time_employees_path %></li>
        <li><%= link_to "Seasonal", seasonals_path %></li>
        <% if isAdmin %>
          <li><%= link_to "contract Employees", contract_employees_path %></li>
        <% end %>
        <li><%= link_to "seniority reports", seniority_report_index_path %></li>
        <% elsif (!current_page? (login_path)) && (!current_page? ('/')) %>
          <li><%= link_to "Log In", login_path %></li>
        <% end %>

        <li><%= link_to "Log Out", logout_path %></li>
      </div>

    </ul>
  </div>
  <% flash.each do |key, value| %>
    <%= content_tag(:div, class: "alert alert-#{key}") do %>
      <p><%= value %></p>
    <% end %>
  <% end %>
  <%= yield %>


</body>
</html>
