<p id="notice"><%= notice %></p>

<h1>Listing Part Time Employees</h1>

<table>
  <thead>
    <tr>
      <th>Company Name</th>

      <th>Last Name</th>
      <th>First Name</th>

      <th>Dateofhire</th>
      <% if isAdmin %>
        <th>Dateoftermination</th>
        <th>Hourlyrate</th>
      <% end %>
      <th>Complete</th>
      <th>Time Card</th>
      <th colspan="3"></th>


    </tr>
  </thead>

  <tbody>
    <% @part_time_employees.each do |part_time_employee| %>
      <tr>
        <td><%= part_time_employee.employee.company.name %></td>

        <td><%= part_time_employee.employee.lastName %></td>
        <td><%= part_time_employee.employee.firstName %></td>


        <td><%= part_time_employee.dateOfHire %></td>
        <% if isAdmin %>
          <td><%= part_time_employee.dateOfTermination %></td>
          <td><%= part_time_employee.hourlyRate %></td>
        <% end %>

        <td><input type="checkbox" disabled <%= part_time_employee.verified ? 'checked': '' %>></td>
        <% if part_time_employee.part_time_employees_id == nil%>
        <td><%= link_to 'Time card', :controller => :time_cards, :action => :index, :id => part_time_employee.employee.id %></td>
        <% else %>
        <td></td>
        <% end %>

        <td><%= link_to 'Show', part_time_employee %></td>
        <td><%= link_to 'Edit', edit_part_time_employee_path(part_time_employee) %></td>
        <td><%= link_to 'Destroy', part_time_employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

