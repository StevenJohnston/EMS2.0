<p id="notice"><%= notice %></p>

<h1>Listing Seasonals</h1>

<table>
  <thead>
    <tr>
      <th>Company Name</th>

      <th>Last Name</th>
      <th>First Name</th>

      <th>Season</th>
      <th>Seasonyear</th>
      <% if isAdmin %>
        <th>Piecepay</th>
      <% end %>
      <th>Complete</th>
      <th>Time Card</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seasonals.each do |seasonal| %>
      <tr>
        <td><%= seasonal.employee.company.name %></td>

        <td><%= seasonal.employee.lastName %></td>
        <td><%= seasonal.employee.firstName %></td>

        <td><%= seasonal.season %></td>
        <td><%= seasonal.seasonYear %></td>
        <% if isAdmin %>
          <td><%= seasonal.piecePay %></td>
        <% end %>
        <td><input type="checkbox" disabled <%= seasonal.verified ? 'checked': '' %>></td>
        <% if seasonal.seasonals_id == nil%>
        <td><%= link_to 'Time card', :controller => :time_cards, :action => :index, :id => seasonal.employee.id %></td>
        <% else %>
        <td></td>
        <% end %>
        <td><%= link_to 'Show', seasonal %></td>
        <td><%= link_to 'Edit', edit_seasonal_path(seasonal) %></td>
        <td><%= link_to 'Destroy', seasonal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

